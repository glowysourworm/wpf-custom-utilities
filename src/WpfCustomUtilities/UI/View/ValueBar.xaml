<UserControl x:Class="WpfCustomUtilities.UI.View.ValueBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </UserControl.Resources>
    <Grid>
        <Rectangle x:Name="ValueBackgroundRectangle" Opacity="0.1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
        <Rectangle x:Name="ValueRectangle" VerticalAlignment="Stretch" HorizontalAlignment="Left" Opacity="0.7" StrokeThickness="2" />
    </Grid>
</UserControl>
